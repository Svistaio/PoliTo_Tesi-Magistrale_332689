    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug-main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Codice/main.py", // https://stackoverflow.com/questions/74051616/how-do-i-make-visual-studio-code-always-run-the-main-python-file-when-the-run-bu
            // "program": "${file}",
            // "console": "integratedTerminal", // Open «Terminal» when debugging
            "console": "internalConsole",       // Open «Debug Console» when debugging 
            "internalConsoleOptions": "openOnSessionStart",            
            "cwd": "${fileDirname}", // Set the python file directory as the current working directory (cwd)
        }
    ]
}