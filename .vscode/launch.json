{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            // "console": "integratedTerminal", // Open «Terminal» when debugging
            "console": "internalConsole",       // Open «Debug Console» when debugging 
            "internalConsoleOptions": "openOnSessionStart",            
            "cwd": "${fileDirname}", // Set the python file directory as the current working directory (cwd)
        }
    ]
}